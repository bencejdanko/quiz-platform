---
import { getAllQuizzes } from '../lib/loader';
import Authors from '../components/Authors.astro';
import UserAuth from '../components/UserAuth.astro';
import { getDB } from '../lib/db';
import { SubmissionService } from '../lib/submission-service';

export const prerender = false;

const quizzes = await getAllQuizzes();
const allTags = [...new Set(quizzes.flatMap(q => q.tags))].sort();

let counts: Record<string, number> = {};
try {
	const db = getDB(Astro.locals);
	const submissionService = new SubmissionService(db);
	counts = await submissionService.getAllSubmissionCounts();
} catch (e) {
	console.error('Failed to load submission counts', e);
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Quiz Platform</title>
		<meta name="description" content="A simple, test-driven quiz platform built with Astro and Markdown." />
		<style>
			:root {
				--bg: #010409;
				--fg: #ffffff;
				--accent: #ffffff;
				--card-bg: #010409;
				--card-border: #ffffff;
			}
			body {
				font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
				background-color: var(--bg);
				color: var(--fg);
				margin: 0;
				display: flex;
				flex-direction: column;
				align-items: center;
				min-height: 100vh;
				padding: 2rem;
			}
			h1 {
				font-size: 2.5rem;
				margin: 0;
				color: var(--fg);
				font-weight: 600;
			}
            .main-header {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 1.5rem;
                margin-bottom: 2rem;
                width: 100%;
                max-width: 1000px;
            }
			.quiz-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 1rem;
				width: 100%;
				max-width: 1000px;
                margin-bottom: 3rem;
			}
			.quiz-card {
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				padding: 1.5rem;
				border-radius: 6px;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.quiz-card:hover {
				background: #0d1117;
			}
			.quiz-card h2 {
				margin: 0 0 0.5rem 0;
				color: var(--fg);
				font-size: 1.25rem;
			}
			.quiz-card p {
				color: #8b949e;
				margin: 0;
				font-size: 0.9rem;
			}
            .repo-link {
                color: var(--fg);
                text-decoration: none;
                transition: opacity 0.2s;
                display: flex;
                align-items: center;
            }
            .repo-link:hover {
                opacity: 0.7;
            }
            .repo-link svg {
                fill: currentColor;
                height: 2.5rem;
                width: auto;
            }
            .quiz-card-footer {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 1rem;
            }
            .view-submissions-btn {
                background-color: #238636;
                color: white;
                border: 1px solid rgba(240, 246, 252, 0.1);
                border-radius: 6px;
                padding: 3px 12px;
                font-size: 12px;
                line-height: 20px;
                font-weight: 500;
                text-decoration: none;
                transition: background-color 0.2s;
                display: flex;
                align-items: center;
                gap: 6px;
            }
            .view-submissions-btn:hover {
                background-color: #2ea043;
            }
            .submission-count {
                background-color: rgba(255, 255, 255, 0.2);
                padding: 0 6px;
                border-radius: 10px;
                font-size: 10px;
                min-width: 16px;
                text-align: center;
            }
            .suggest-quiz-btn {
                display: inline-block;
                background-color: #238636;
                color: white;
                border: 1px solid rgba(240, 246, 252, 0.1);
                border-radius: 6px;
                padding: 8px 20px;
                font-size: 14px;
                font-weight: 500;
                text-decoration: none;
                transition: background-color 0.2s;
            }
            .suggest-quiz-btn:hover {
                background-color: #2ea043;
            }
            .tag-filters {
                display: flex;
                flex-wrap: wrap;
                gap: 0.75rem;
                justify-content: center;
                margin-bottom: 2.5rem;
                max-width: 1000px;
                width: 100%;
            }
            .tag-filter {
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid rgba(255, 255, 255, 0.1);
                color: #8b949e;
                padding: 6px 16px;
                border-radius: 2em;
                cursor: pointer;
                font-size: 0.85rem;
                font-weight: 500;
                transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
                user-select: none;
            }
            .tag-filter:hover {
                border-color: #58a6ff;
                color: #58a6ff;
                background: rgba(88, 166, 255, 0.1);
            }
            .tag-filter.active {
                background-color: #0969da;
                color: #ffffff;
                border-color: #0969da;
                box-shadow: 0 0 15px rgba(9, 105, 218, 0.4);
            }
            .quiz-tags {
                display: flex;
                flex-wrap: wrap;
                gap: 0.4rem;
                margin-top: 0.75rem;
            }
            .tag {
                display: inline-block;
                padding: 0 10px;
                font-size: 11px;
                font-weight: 600;
                line-height: 20px;
                border-radius: 2em;
                background-color: rgba(56, 139, 253, 0.15);
                color: #58a6ff;
                border: 1px solid rgba(56, 139, 253, 0.3);
            }
            .quiz-card {
                transition: transform 0.2s, box-shadow 0.2s, opacity 0.3s;
            }
            .quiz-card.hidden {
                display: none;
            }
            .quiz-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0,0,0,0.3);
            }
		</style>

	</head>
	<body>
        <UserAuth />
		<header class="main-header">
			<h1>Quizzes</h1>
            
            <a href="https://github.com/bencejdanko/quiz-platform" class="repo-link">
                <svg viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
            </a>
            
		</header>
        <div>

        </div>
		<div style="text-align: center; margin-bottom: 2rem;">
			<a href="/suggest" class="suggest-quiz-btn">
				+ Suggest a Quiz
			</a>
		</div>

        <div class="tag-filters">
            {allTags.map(tag => (
                <button class="tag-filter" data-tag={tag}>
                    {tag}
                </button>
            ))}
        </div>
		<div class="quiz-grid">
			{quizzes.map((quiz) => (
				<div class="quiz-card" id={`quiz-${quiz.slug}`} data-tags={quiz.tags.join(',')}>
					<a href={`/quiz/${quiz.slug}`} style="text-decoration: none; color: inherit; display: block;">
                        <h2>{quiz.title}</h2>
					    <p>{quiz.questions.length} Questions</p>
                        <div class="quiz-tags">
                            {quiz.tags.map(tag => <span class="tag">{tag}</span>)}
                        </div>
                    </a>
                    <div class="quiz-card-footer">
                        <Authors authors={quiz.authors} />
                        <a href={`/submissions/${quiz.slug}`} class="view-submissions-btn" title="View Public Submissions">
                            <span class="btn-text">Submissions</span>
                            <span class="submission-count">{counts[quiz.slug] || 0}</span>
                        </a>
                    </div>
				</div>
			))}
		</div>

        <script>
            const filters = document.querySelectorAll('.tag-filter');
            const cards = document.querySelectorAll('.quiz-card');
            let activeTags = new Set();

            filters.forEach(filter => {
                filter.addEventListener('click', () => {
                    const tag = filter.getAttribute('data-tag');
                    
                    if (activeTags.has(tag)) {
                        activeTags.delete(tag);
                        filter.classList.remove('active');
                    } else {
                        activeTags.add(tag);
                        filter.classList.add('active');
                    }

                    updateVisibility();
                });
            });

            function updateVisibility() {
                cards.forEach(card => {
                    const cardTagsAttr = card.getAttribute('data-tags');
                    if (!cardTagsAttr) return;
                    
                    const cardTags = cardTagsAttr.split(',');
                    
                    if (activeTags.size === 0) {
                        (card as HTMLElement).style.display = 'block';
                        (card as HTMLElement).classList.remove('hidden');
                        return;
                    }

                    const hasAllTags = Array.from(activeTags).every(tag => cardTags.includes(tag as string));
                    
                    if (hasAllTags) {
                        (card as HTMLElement).style.display = 'block';
                        (card as HTMLElement).classList.remove('hidden');
                    } else {
                        (card as HTMLElement).style.display = 'none';
                        (card as HTMLElement).classList.add('hidden');
                    }
                });
            }
        </script>
	</body>
</html>
