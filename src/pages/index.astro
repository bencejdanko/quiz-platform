---
import { getAllQuizzes } from '../lib/loader';
import Authors from '../components/Authors.astro';
import UserAuth from '../components/UserAuth.astro';

export const prerender = false;


const quizzes = await getAllQuizzes();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Quiz Platform</title>
		<meta name="description" content="A simple, test-driven quiz platform built with Astro and Markdown." />
		<style>
			:root {
				--bg: #010409;
				--fg: #ffffff;
				--accent: #ffffff;
				--card-bg: #010409;
				--card-border: #ffffff;
			}
			body {
				font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
				background-color: var(--bg);
				color: var(--fg);
				margin: 0;
				display: flex;
				flex-direction: column;
				align-items: center;
				min-height: 100vh;
				padding: 2rem;
			}
			h1 {
				font-size: 2.5rem;
				margin: 0;
				color: var(--fg);
				font-weight: 600;
			}
            .main-header {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 1.5rem;
                margin-bottom: 2rem;
                width: 100%;
                max-width: 1000px;
            }
			.quiz-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 1rem;
				width: 100%;
				max-width: 1000px;
                margin-bottom: 3rem;
			}
			.quiz-card {
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				padding: 1.5rem;
				border-radius: 6px;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.quiz-card:hover {
				background: #0d1117;
			}
			.quiz-card h2 {
				margin: 0 0 0.5rem 0;
				color: var(--fg);
				font-size: 1.25rem;
			}
			.quiz-card p {
				color: #8b949e;
				margin: 0;
				font-size: 0.9rem;
			}
            .repo-link {
                color: var(--fg);
                text-decoration: none;
                transition: opacity 0.2s;
                display: flex;
                align-items: center;
            }
            .repo-link:hover {
                opacity: 0.7;
            }
            .repo-link svg {
                fill: currentColor;
            }
            .quiz-card-footer {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 1rem;
            }
            .view-submissions-btn {
                background-color: #238636;
                color: white;
                border: 1px solid rgba(240, 246, 252, 0.1);
                border-radius: 6px;
                padding: 3px 12px;
                font-size: 12px;
                line-height: 20px;
                font-weight: 500;
                text-decoration: none;
                transition: background-color 0.2s;
            }
            .view-submissions-btn:hover {
                background-color: #2ea043;
            }
            .suggest-quiz-btn {
                display: inline-block;
                background-color: #238636;
                color: white;
                border: 1px solid rgba(240, 246, 252, 0.1);
                border-radius: 6px;
                padding: 8px 20px;
                font-size: 14px;
                font-weight: 500;
                text-decoration: none;
                transition: background-color 0.2s;
            }
            .suggest-quiz-btn:hover {
                background-color: #2ea043;
            }
		</style>

	</head>
	<body>
        <UserAuth />
		<header class="main-header">
			<h1>Quizzes</h1>
		</header>
		<div style="text-align: center; margin-bottom: 2rem;">
			<a href="/suggest" class="suggest-quiz-btn">
				+ Suggest a Quiz
			</a>
		</div>
		<div class="quiz-grid">
			{quizzes.map((quiz) => (
				<div class="quiz-card" id={`quiz-${quiz.slug}`}>
					<a href={`/quiz/${quiz.slug}`} style="text-decoration: none; color: inherit; display: block;">
                        <h2>{quiz.title}</h2>
					    <p>{quiz.questions.length} Questions</p>
                    </a>
                    <div class="quiz-card-footer">
                        <Authors authors={quiz.authors} />
                        <a href={`/submissions/${quiz.slug}`} class="view-submissions-btn" title="View Public Submissions">
                            <span class="btn-text">Submissions</span>
                        </a>
                    </div>
				</div>
			))}
		</div>
	</body>
</html>
