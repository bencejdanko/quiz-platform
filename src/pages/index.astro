---
import { getAllQuizzes } from '../lib/loader';
import Authors from '../components/Authors.astro';

export const prerender = true;

const quizzes = await getAllQuizzes();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Quiz Platform</title>
		<meta name="description" content="A simple, test-driven quiz platform built with Astro and Markdown." />
		<style>
			:root {
				--bg: #010409;
				--fg: #ffffff;
				--accent: #ffffff;
				--card-bg: #010409;
				--card-border: #ffffff;
			}
			body {
				font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
				background-color: var(--bg);
				color: var(--fg);
				margin: 0;
				display: flex;
				flex-direction: column;
				align-items: center;
				min-height: 100vh;
				padding: 2rem;
			}
			h1 {
				font-size: 2.5rem;
				margin: 0;
				color: var(--fg);
				font-weight: 600;
			}
            .main-header {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 1.5rem;
                margin-bottom: 2rem;
                width: 100%;
                max-width: 1000px;
            }
			.quiz-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 1rem;
				width: 100%;
				max-width: 1000px;
                margin-bottom: 3rem;
			}
			.quiz-card {
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				padding: 1.5rem;
				border-radius: 6px;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.quiz-card:hover {
				background: #0d1117;
			}
			.quiz-card h2 {
				margin: 0 0 0.5rem 0;
				color: var(--fg);
				font-size: 1.25rem;
			}
			.quiz-card p {
				color: #8b949e;
				margin: 0;
				font-size: 0.9rem;
			}
            .repo-link {
                color: var(--fg);
                text-decoration: none;
                transition: opacity 0.2s;
                display: flex;
                align-items: center;
            }
            .repo-link:hover {
                opacity: 0.7;
            }
            .repo-link svg {
                fill: currentColor;
            }
		</style>

	</head>
	<body>
		<header class="main-header">
			<h1>Quizzes</h1>
            <a href="https://github.com/bencejdanko/quiz-platform" target="_blank" rel="noopener noreferrer" class="repo-link" title="View Source on GitHub">
                <svg height="32" viewBox="0 0 16 16" width="32"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
            </a>
		</header>
		<div class="quiz-grid">
			{quizzes.map((quiz) => (
				<div class="quiz-card" id={`quiz-${quiz.slug}`}>
					<a href={`/quiz/${quiz.slug}`} style="text-decoration: none; color: inherit; display: block;">
                        <h2>{quiz.title}</h2>
					    <p>{quiz.questions.length} Questions</p>
                    </a>
                    <Authors authors={quiz.authors} />
				</div>
			))}
		</div>
	</body>
</html>
