# Auth.js Configuration
# Generate a secret using: openssl rand -base64 32
AUTH_SECRET=your_auth_secret

# GitHub OAuth Credentials
# Create these at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Quiz Suggestions Email
# Email address to receive quiz suggestions
SUGGESTION_EMAIL=your_email@gmail.com

# Resend API Configuration (for sending emails)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_api_key
RESEND_FROM_EMAIL=Quiz Platform <noreply@yourdomain.com>
